@model PizzaButikenOnline.Models.PaymentViewModels.PayWithCardViewModel

@{
    ViewData["Title"] = "PayWithCard";
}

<h2>Kortbetalning:</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PayWithCard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidTil" class="control-label"></label>
                <input asp-for="ValidTil" class="form-control" />
                <span asp-validation-for="ValidTil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVC" class="control-label"></label>
                <input asp-for="CVC" class="form-control" />
                <span asp-validation-for="CVC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Betala" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section scripts {
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js" asp-append-version="true"></script>
}
