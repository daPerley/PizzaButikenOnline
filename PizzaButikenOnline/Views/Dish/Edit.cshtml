@model PizzaButikenOnline.Models.DishViewModels.DishViewModel

@{
    ViewData["Title"] = "Edit";
    var categories = new SelectList(Model.Categories, "Id", "Name");
    var ingredients = new SelectList(Model.Ingredients, "Id", "Name");
}

<h2>Edit</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="categories">
                    <option selected="selected"></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-control-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-control-group">
                <label asp-for="Ingredients" class="control-label"></label>
                <select asp-for="Ingredients" class="form-control" asp-items="ingredients">
                    <option selected="selected"></option>
                </select>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            @{
// TODO: Add ingredient and category for editing here as well
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

