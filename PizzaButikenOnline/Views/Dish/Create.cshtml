@model PizzaButikenOnline.Models.DishViewModels.DishViewModel
@{
    ViewData["Title"] = "Create";
    var categories = new SelectList(Model.Categories, "Id", "Name");
    var ingredients = new SelectList(Model.Ingredients, "Id", "Name");
}
<h2>Lägg till ny rätt</h2>
@using (Html.BeginForm("Create", "Dish"))
{
    @Html.AntiForgeryToken()
    <div class="form-control-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categories">
            <option selected="selected"></option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-control-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-control-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-control-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-control-group">
        <label asp-for="UsedIngredientIds" class="control-label"></label>
        <select asp-for="UsedIngredientIds" class="form-control" asp-items="ingredients">
            <option selected="selected"></option>
        </select>
        <span asp-validation-for="UsedIngredientIds" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spara</button>
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js" asp-append-version="true"></script>
}